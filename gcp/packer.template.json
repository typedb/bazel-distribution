{
  "variables": {
    "gcp_account_file": "{{env `DEPLOY_PACKER_GCP_ACCOUNT_FILE`}}",
    "version": "{{env `DEPLOY_PACKER_VERSION`}}"
  },
  "builders": [
    {
      "type": "googlecompute",
      "account_file": "{{user `gcp_account_file`}}",
      "project_id": "{project_id}",
      "source_image_family": "{source_image_family}",
      "zone": "{zone}",
      "ssh_username": "ubuntu",
      "image_name": "{image_name}",
      "image_family": "{image_family}",
      "image_licenses": {image_licenses},
      "disk_size": 20,
      "disable_default_service_account": {disable_default_service_account}
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [ "mkdir /tmp/deployment" ]
    },
    {
      "type": "file",
      "source": "files/",
      "destination": "/tmp/deployment/"
    },
    {
      "type": "shell",
      "inline": [ "sudo /tmp/deployment/{install}" ]
    }
  ]
}
